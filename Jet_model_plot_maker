plt3.plot(common_radius_c25_NFW_d1_e1_duty01_thetaJ85_thetaFRI15_sQ15, NTP_c25_NFW_d1_e1_duty01_thetaJ85_thetaFRI15_sQ15, color='blueviolet')
plt3.set_xscale('log')
plt3.set_xlim(0.5*10**(-2), 0.5*10**(0))
