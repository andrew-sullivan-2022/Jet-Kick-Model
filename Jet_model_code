## Calculating the heating rates and the heating velocity kicks

# creating a common set of radius values
common_scaled_radii = np.logspace(np.log10(min(np.concatenate(scaled_halo_radii_samples))), np.log10(max(np.concatenate(scaled_halo_radii_samples))), base=10, num=150)
# creating a scaled radius for the cooling-only regime
cooling_only_scaled_radii = np.logspace(np.log10(max(common_scaled_radii)), 1, base=10, num=50)
# total radius = heating subjected region + cooling-only region
tot_common_scaled_radii = np.array([*common_scaled_radii, *cooling_only_scaled_radii[1:]])
cluster_radius_steps = len(tot_common_scaled_radii)

# calculating the heating rates
duty01_heating_rate_samples = np.empty((N_prime, 150))
for i in range(N_prime):
    Rjet_conical_volume = jet_filling_vol(Rjet_samples[i], Qjet_samples[i], thetaJ, thetaFRI, s0, *environ_params)
    duty01_heating_rate_samples[i] = np.multiply(filling_factor_samples[i], 2*np.pi*duty*Qjet_samples[i]/Rjet_conical_volume)
# interpolating the heating values
duty01_interpolated_heating = np.zeros((N_prime, radius_bins))
for i, subarray in enumerate(duty01_heating_rate_samples):
    interpolator = interp1d(scaled_halo_radii_samples[i], subarray, kind='linear', bounds_error=False)
    duty01_interpolated_heating[i] = interpolator(s)
duty01_interpolated_heating[np.isnan(duty01_interpolated_heating)] = 0
duty02_interpolated_heating = np.multiply(0.2/duty, duty01_interpolated_heating)
duty03_interpolated_heating = np.multiply(0.3/duty, duty01_interpolated_heating)

# calculating the mean heating rate
duty01_mean_heating_rate = np.mean(duty01_interpolated_heating, axis=0)
duty02_mean_heating_rate = np.multiply(0.2/duty, duty01_mean_heating_rate)
duty03_mean_heating_rate = np.multiply(0.3/duty, duty01_mean_heating_rate)

# calculating the heating-induced velocity kick
duty01_heating_velocity_kicks_samples = duty01_interpolated_heating*velocity_kick_over_energy_profile
duty02_heating_velocity_kicks_samples = np.multiply(0.2/duty, duty01_heating_velocity_kicks_samples)
duty03_heating_velocity_kicks_samples = np.multiply(0.3/duty, duty01_heating_velocity_kicks_samples)



## Calculating the cooling rates and the cooling velocity kicks

# interpolating the filling factor
interpolated_filling_factor = np.zeros((N_prime, radius_bins))
for i, subarray in enumerate(filling_factor_samples):
    interpolator = interp1d(scaled_halo_radii_samples[i], subarray, kind='linear', bounds_error=False)
    interpolated_filling_factor[i] = interpolator(s)
interpolated_filling_factor[np.isnan(interpolated_filling_factor)] = 0

# calculating the cooling rate
cooling_rate_samples = np.multiply(np.subtract(1, interpolated_filling_factor), cooling_rate)

# calculating the cooling-induced velocity kick
cooling_velocity_kicks_samples = cooling_rate_samples*velocity_kick_over_energy_profile



## Predicting the total velocity kick, the Mach number and the non-thermal pressure

# combining the heating and cooling rates
duty01_effective_energy_injection = np.add(duty01_interpolated_heating, cooling_rate_samples)
duty02_effective_energy_injection = np.add(duty02_interpolated_heating, cooling_rate_samples)
duty03_effective_energy_injection = np.add(duty03_interpolated_heating, cooling_rate_samples)
# mean effective energy injection rate
duty01_mean_effective_energy_injection = np.mean(duty01_effective_energy_injection, axis=0)
duty02_mean_effective_energy_injection = np.mean(duty02_effective_energy_injection, axis=0)
duty03_mean_effective_energy_injection = np.mean(duty03_effective_energy_injection, axis=0)

# combining the heating and cooling velocities
duty01_gas_velocity_kicks_samples = np.add(duty01_heating_velocity_kicks_samples, cooling_velocity_kicks_samples)
duty02_gas_velocity_kicks_samples = np.add(duty02_heating_velocity_kicks_samples, cooling_velocity_kicks_samples)
duty03_gas_velocity_kicks_samples = np.add(duty03_heating_velocity_kicks_samples, cooling_velocity_kicks_samples)
# converting velocities to km s^-1
sound_speed_profile_kms = np.divide(sound_speed_profile, 10**3)
duty01_gas_velocity_kms = np.divide(duty01_gas_velocity_kicks_samples, 10**3)
duty02_gas_velocity_kms = np.divide(duty02_gas_velocity_kicks_samples, 10**3)
duty03_gas_velocity_kms = np.divide(duty03_gas_velocity_kicks_samples, 10**3)
# calculating the mean gas velocities
duty01_mean_gas_velocity_kms = np.mean(duty01_gas_velocity_kms, axis=0)
duty02_mean_gas_velocity_kms = np.mean(duty02_gas_velocity_kms, axis=0)
duty03_mean_gas_velocity_kms = np.mean(duty03_gas_velocity_kms, axis=0)

# calculating the Mach number
duty01_mach_number_samples = np.divide(duty01_gas_velocity_kicks_samples, sound_speed_profile)
duty02_mach_number_samples = np.divide(duty02_gas_velocity_kicks_samples, sound_speed_profile)
duty03_mach_number_samples = np.divide(duty03_gas_velocity_kicks_samples, sound_speed_profile)
# calculating the mean Mach number
duty01_mean_mach_number = np.mean(duty01_mach_number_samples, axis=0)
duty02_mean_mach_number = np.mean(duty02_mach_number_samples, axis=0)
duty03_mean_mach_number = np.mean(duty03_mach_number_samples, axis=0)

# calculating the non-thermal pressure
duty01_NTP_samples = vNTP(duty01_mach_number_samples)
duty02_NTP_samples = vNTP(duty02_mach_number_samples)
duty03_NTP_samples = vNTP(duty03_mach_number_samples)
# calculating the mean non-thermal pressure
duty01_mean_NTP = np.mean(duty01_NTP_samples, axis=0)
duty02_mean_NTP = np.mean(duty02_NTP_samples, axis=0)
duty03_mean_NTP = np.mean(duty03_NTP_samples, axis=0)



