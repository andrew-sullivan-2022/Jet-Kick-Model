plt4.set_ylabel('$\\mathcal{M} \\equiv v_\\mathrm{gas} / c_\\mathrm{s}$', fontsize = 18)
plt4.legend()

plt5 = plt.subplot(gs[5])
# for i in range(N_prime):
#     plt5.plot(s, duty01_NTP_samples[i], color='skyblue', alpha=0.03)
#     plt5.plot(s, duty02_NTP_samples[i], color='blue', alpha=0.03)
#     plt5.plot(s, duty03_NTP_samples[i], color='blueviolet', alpha=0.03)
plt5.plot(s, duty01_mean_NTP, color='skyblue', linewidth=2.5, label='$\\left< \\mathcal{F} \\right>$, when $\\delta=0.1$', ls='-')
plt5.plot(s, duty02_mean_NTP, color='blue', linewidth=2.5, label='$\\left< \\mathcal{F} \\right>$, when $\\delta=0.2$', ls='-')
plt5.plot(s, duty03_mean_NTP, color='blueviolet', linewidth=2.5, label='$\\left< \\mathcal{F} \\right>$, when $\\delta=0.3$', ls='-')
plt5.set_xscale('log')
plt5.set_xlim(0.5*10**(-2), 0.5*10**(0))
plt5.set_xlabel('$r/r_{500}$', fontsize = 18)
plt5.set_ylim(-0.01, 0.51)
#plt5.set_yticks([0, 0.05, 0.1, 0.15])
plt5.set_ylabel('$\\mathcal{F} \\equiv p_\\mathrm{nt}/p$', fontsize = 18)
plt5.legend()

plt.subplots_adjust(hspace=.25, wspace=.3)
fig.add_subplot(111, frame_on=False)
plt.tick_params(labelcolor='none', top=False, bottom=False, left=False, right=False)

